@model IEnumerable<WMBA5.Models.Stat>

@{
    WMBA5.Models.Player player = (WMBA5.Models.Player)ViewBag.Player;
    <partial name="_PlayerStat" model="player" />
    ViewData["Title"] = ViewData["ControllerFriendlyName"];
}
<br />
<hr />
<figure class="row">
    <figcaption class="col mt-3"><h4><text class="d-none d-sm-inline">Player Stats</text></h4></figcaption>
</figure>
<h4>   @ViewData["GameSummary"]</h4>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <input name="PlayerID" value="@player.ID" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="submit" name="actionButton" value="Inning Number" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Player Appearances" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Hits" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Runs Scored" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Strike Outs" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Walks" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="RBI" class="btn btn-link" />
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inning.InningNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlayerAppearance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hits)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RunsScored)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StrikeOuts)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Walks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RBI)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* <partial name="_PagingNavBar" /> *@
</form>
<div>
    <a asp-action="Edit" asp-controller="Player" asp-route-id="@player.ID">Edit @player.FullName</a> |
    <a href='@ViewData["returnURL"]'>Back to Player List</a>
</div>
