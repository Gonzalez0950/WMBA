@model IEnumerable<WMBA5.ViewModels.GameStatsVM>

@{
    WMBA5.Models.Player player = (WMBA5.Models.Player)ViewBag.Player;
    <partial name="_PlayerStat" model="player" />
    ViewData["Title"] = ViewData["ControllerFriendlyName"];
}
<br/>
<hr/>
<figure class="row">
    <figcaption class="col mt-3"><h4><text class="d-none d-sm-inline">Player Stats</text></h4></figcaption>
</figure>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <input  name="PlayerID" value="@player.ID" />

<table class="table"> 
    <thead>
        <tr>
            <th>
                    <input type="submit" name="actionButton" value="Player Appearances" class="btn btn-link" />
            </th>
            <th>
                    <input type="submit" name="actionButton" value="Hits" class="btn btn-link" />
            </th>
            <th>
                    <input type="submit" name="actionButton" value="Runs Scored" class="btn btn-link" />
            </th>
            <th>
                    <input type="submit" name="actionButton" value="Strike Outs" class="btn btn-link" />
            </th>
            <th>
                    <input type="submit" name="actionButton" value="Walks" class="btn btn-link" />
            </th>
            <th>
                    <input type="submit" name="actionButton" value="RBI" class="btn btn-link" />
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.TotalPlayerAppearances)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TotalHits)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalRunsScored)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalStrikeOuts)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalWalks)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalRBI)
            </td>
            <td>
                @* Disabled for the moment (we haven't linked stats to game yet') *@
                         <a asp-controller="Game" asp-action="Details" asp-route-id="@item.GameID" class="btn btn-sm btn-outline-primary"
                           role="button" data-bs-toggle="tooltip">
                            Go to Game
                              </a>
                        <a asp-controller="PlayerStat" asp-action="Details" asp-route-PlayerID="@item.PlayerID" asp-route-GameID="@item.GameID" class="btn btn-sm btn-outline-primary"
                           role="button" data-bs-toggle="tooltip" title="@ViewData["ControllerFriendlyName"] Details">
                            &#x1F50E; <small>Details</small>
                        </a>
            </td>
        </tr>
}
    </tbody>  
</table> 

    @* <partial name="_PagingNavBar" /> *@
</form>
<div>
    <a asp-action="Edit" asp-controller="Player" asp-route-id="@player.ID">Edit @player.FullName</a> |
    <a href='@ViewData["returnURL"]'>Back to Player List</a>
</div>
