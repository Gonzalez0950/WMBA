@model IEnumerable<WMBA5.Models.Score>
<figure class="row">
    <figcaption class="col mt-3"><h4><text class="d-none d-sm-inline">Player Score</text></h4></figcaption>
</figure>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Inning Number
                </th>
                <th>
                    Balls
                </th>
                <th>
                    Foul Balls
                </th>
                <th>
                    Strikes
                </th>
                <th>
                    Outs
                </th>
                <th>
                    Runs
                </th>
                <th>
                    Hits
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inning.InningNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balls)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoulBalls)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Strikes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Out)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Runs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hits)
                    </td>
                    <td>
                        @*Disabled for the moment (we haven't linked stats to game yet')
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@item.GameID" class="btn btn-sm btn-outline-primary"
                           role="button" data-bs-toggle="tooltip">
                            Go to Game
                        </a>
                        <a asp-controller="PlayerStatScore" asp-action="Details" asp-route-PlayerID="@item.PlayerID" asp-route-GameID="@item.GameID" class="btn btn-sm btn-outline-primary"
                           role="button" data-bs-toggle="tooltip" title="@ViewData["ControllerFriendlyName"] Details">
                            &#x1F50E; <small>Details</small>
                        </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* <partial name="_PagingNavBar" /> *@
</form>