@model IEnumerable<WMBA5.Models.Score>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Balls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoulBalls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strikes)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Outs)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Runs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoulBalls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strikes)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Outs)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Runs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hits)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
