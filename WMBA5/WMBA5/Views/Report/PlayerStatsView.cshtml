@model IEnumerable<WMBA5.ViewModels.PlayerInningScoreVM>

@{
    ViewData["Title"] = "Download Report";
}

<h1>Download Report</h1>
<a asp-controller="Report" asp-action="PlayerStatDownload" class="btn btn-sm btn-outline-success"
   role="button" data-bs-toggle="tooltip">
    <strong><small>Download</small></strong>
</a>
<form asp-action="PlayerStatsView">
<div class="form-horizontal">
    <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
    </button><br />
    <div class="@ViewData["ShowFilter"]" id="collapseFilter">
        <div class="card card-body bg-light">
            <div class="row">
                <div class="form-group col-md-7">
                    <label class="control-label">Find a game:</label>
                        @Html.DropDownList("GameID", null, "No Game", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group col-md-2 align-self-end">
                        <input type="submit" name="actionButton" value="Find" class="btn btn-outline-primary" />
                </div>
            </div>
                <p class="alert-danger">@TempData["FeedBack"]</p>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Player ID
            </th>
            <th>
                Balls
            </th>
            <th>
                Fouls
            </th>
            <th>
                Strikes
            </th>
            <th>
                Outs
            </th>
            <th>
                Runs
            </th>
            <th>
                Hits
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalBalls)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalFoulBalls)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalStrikes)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalOuts)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalRuns)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.TotalHits)
            </td>
        </tr>
        }
    </tbody>
</table>
</form>
