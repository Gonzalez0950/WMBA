@model IEnumerable<WMBA5.Models.Stat>

@{
    ViewData["Title"] = "Download Report";
}

<h1>Player Comparision</h1>

<form asp-action="PlayerComparisionView">
    <div class="form-horizontal">
        <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
        </button><br />
        <div class="@ViewData["ShowFilter"]" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-7">
                        <label class="control-label">Select a player:</label>
                        @Html.DropDownList("PlayerID1", null, "No Player", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-7">
                        <label class="control-label">Select a player:</label>
                        @Html.DropDownList("PlayerID2", null, "No Player", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2 align-self-end">
                        <input type="submit" name="actionButton" value="Download" class="btn btn-outline-primary" />
                    </div>
                </div>
                <p class="alert-danger">@TempData["FeedBack"]</p>
            </div>
        </div>
    </div>
</form>
