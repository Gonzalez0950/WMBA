@{
    ViewData["Title"] = "Home Page";
}
<style>

    .main-body-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 20px;
    }

    .main-grid-item {
        padding: 50px;
    }

    .card {
        width: 100%; 
        height: 100%; 
        max-width: 400px; 
        max-height: 350px;
        position: relative;
        perspective: 1000px;
    }

    .card-front,
    .card-back {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        backface-visibility: hidden;
        transform-style: preserve-3d;
        transition: transform 0.5s;
    }

    .card-front {
        z-index: 2;
    }

    .card-back {
        transform: rotateY(180deg);
        z-index: 1;
        background-color: #EAEAEA;
        padding: 20px;
        text-align: left;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .grid-item-text {
        display: none;
    }

    .card:hover .card-front {
        transform: rotateY(-180deg);
    }

    .card:hover .card-back {
        transform: rotateY(0deg);
    }

    .card:hover .grid-item-text {
        display: block;
    }

</style>
