@model WMBA5.Models.Player

@{
    ViewData["Title"] = "Edit";
}

<partial name="_ViewHeading" />
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" id="SavedTeamID" value="@Model.TeamID" />
<div class="row">
    <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label"></label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusID" class="control-label"></label>
                <select asp-for="StatusID" class="form-control" asp-items="ViewBag.StatusID"></select>
                <span asp-validation-for="StatusID" class="text-danger"></span>
            </div>
    </div>
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MemberID" class="control-label"></label>
                <input asp-for="MemberID" class="form-control" disabled />
                <span asp-validation-for="MemberID" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="JerseyNumber" class="control-label"></label>
                <input asp-for="JerseyNumber" class="form-control" min="0" max="99" />
                <span asp-validation-for="JerseyNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DivisionID" class="control-label"></label>
                <select asp-for="DivisionID" class="form-control" asp-items="ViewBag.DivisionID"></select>
                <span asp-validation-for="DivisionID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <select asp-for="TeamID" class="form-control" asp-items="ViewBag.TeamID">
                    <option value="">No Team</option>
                </select>
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
      
 
    </div>
</div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    </form>
<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Variable to store the initially selected team
            var savedTeamID = $('#SavedTeamID').val();

            // Fetch teams based on the selected division
            $('#DivisionID').change(function () {
                var divisionId = $(this).val();
                if (divisionId) {
                    $.ajax({
                        url: '/Player/GetTeamsByDivision',
                        type: 'GET',
                        data: { divisionId: divisionId },
                        success: function (data) {
                            var teamDropdown = $('#TeamID');
                            var selectedTeam = teamDropdown.val(); // Store the currently selected team
                            // Update Team dropdown options
                            teamDropdown.empty();
                            // Add "Select a team" option
                            teamDropdown.append($('<option>').val("").text("Select a team"));
                            $.each(data, function (index, team) {
                                teamDropdown.append($('<option>').val(team.value).text(team.text));
                            });
                            // Restore the selected team, if available
                            if (selectedTeam && teamDropdown.find('option[value="' + selectedTeam + '"]').length) {
                                teamDropdown.val(selectedTeam);
                            }
                        }
                    });
                } else {
                    // Clear Team dropdown if no division selected
                    var teamDropdown = $('#TeamID');
                    teamDropdown.empty();
                    // Add "Select a team" option
                    teamDropdown.append($('<option>').val("").text("Select a team"));
                }
            });

            // Trigger change event on Division dropdown if DivisionID is already set (for editing)
            var savedDivisionID = $('#DivisionID').val();
            if (savedDivisionID) {
                $('#DivisionID').trigger('change');
            }
        });
    </script>
}
